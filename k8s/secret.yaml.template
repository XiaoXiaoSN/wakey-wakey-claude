# Kubernetes Secret for Claude OAuth Token
# DO NOT commit the actual secret.yaml file with real token
#
# Method 1: Create secret directly from command line (recommended)
# kubectl create secret generic claude-token \
#   --from-literal=CLAUDE_CODE_OAUTH_TOKEN="your_token_here" \
#   --namespace=default
#
# Method 2: Use this template
# 1. Get your token: claude setup-token
# 2. Replace <YOUR_TOKEN_HERE> with your actual token
# 3. Apply: kubectl apply -f k8s/secret.yaml
#
apiVersion: v1
kind: Secret
metadata:
  name: claude-token
  namespace: default
type: Opaque
stringData:
  # your long-lived OAuth token from 'claude setup-token'
  CLAUDE_CODE_OAUTH_TOKEN: <YOUR_TOKEN_HERE>
